@model IEnumerable<DotnetProjet5.ViewModels.VehicleViewModel>
@* TODO : placer l'index comme sur la page d'accueil, utiliser vehicleSmallCard et faire un affichage conditionnel pour les parties edit/delete/etc *@
@{
    ViewData["Title"] = "Nos Voitures";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Nos Voitures</h1>

<div class="d-flex justify-content-center mb-5">
    <a asp-area="" asp-controller="Vehicles" asp-action="Create" class="btn btn-custom mb-3 d-flex">+ Ajouter une Voiture</a>
</div>

<div class="container">
    <div class="row row-cols-1 row-cols-lg-2 g-3">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                @Html.Partial("~/Views/Shared/_VehicleCardSmallPartial.cshtml", item)
                <div class="mt-2">
                    <a asp-action="Edit" asp-route-id="@item.CodeVin" class="btn btn-primary" aria-label="Modifier @item.Model">Modifier</a>
                    <a asp-action="Details" asp-route-id="@item.CodeVin" class="btn btn-info" aria-label="Détails @item.Model">Détails</a>
                    <a asp-action="Delete" asp-controller="Vehicles" asp-route-id="@item.CodeVin" class="btn btn-danger" aria-label="Supprimer @item.Model">Supprimer</a>
                    <a asp-action="Create" asp-controller="Repairs" asp-route-id="@item.CodeVin" class="btn btn-secondary" aria-label="Ajouter une réparation à @item.Model">Ajouter une réparation</a>
                </div>
            </div>
        }
    </div>
</div>
