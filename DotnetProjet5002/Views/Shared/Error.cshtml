@model DotnetProjet5.Models.ErrorViewModel

@{
    ViewData["Title"] = "Erreur";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #333;
            text-align: center;
            padding: 50px;
        }

        .error-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 40px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .error-title {
            font-size: 36px;
            color: #dc3545;
            margin-top: 20px;
        }

        .error-message {
            font-size: 24px;
            margin-top: 10px;
        }

        .request-id {
            font-size: 18px;
            margin-top: 20px;
        }

        .dev-mode {
            font-size: 16px;
            margin-top: 30px;
            color: #6c757d;
        }

        .error-image {
            width: 150px;
            height: 150px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="error-container">
        <img src="~/images/errorImage.jpg" alt="Erreur" class="error-image" />
        <h1 class="error-title">Oups! Quelque chose s'est mal passé.</h1>
        <h2 class="error-message">Nous sommes désolés, une erreur s'est produite lors du traitement de votre demande.</h2>

        @if (Model.ShowRequestId)
        {
            <p class="request-id">
                <strong>ID de la demande :</strong> <code>@Model.RequestId</code>
            </p>
        }

        <p class="dev-mode">
            Si le problème persiste, veuillez contacter le support technique.
        </p>
