@model DotnetProjet5.ViewModels.VehicleViewModel

<div class="col">
    <a href="@Url.Action("Details", "Vehicles", new { id = Model.CodeVin  })" class="text-decoration-none text-dark">
        <div class="card border-0">
            <div class="row">
                <div class="col-md-7">
                    <img src="@Model.ImageUrl" alt="Image de @Model.Model" class="img-fluid rounded" style="object-fit: cover;width:100%; height: 316px;">
                </div>
                <div class="col-md-3">
                    <div class="card-body lh-sm">
                        <p class="card-text" style="font-size: 22px">@Html.DisplayFor(modelItem => modelItem.SellPrice) €</p>
                        <p class="card-text fw-light" style="font-size: 18px">@Model.Year.ToString("yyyy")</p>
                        <p class="card-text fw-light" style="font-size: 18px">@Html.DisplayFor(modelItem => modelItem.Brand)</p>
                        <p class="card-text fw-light" style="font-size: 18px">@Html.DisplayFor(modelItem => modelItem.Model)</p>
                        <p class="card-text fw-light" style="font-size: 18px">@Html.DisplayFor(modelItem => modelItem.Finish)</p>
                    </div>
                </div>
            </div>
        </div>
    </a>
</div>
