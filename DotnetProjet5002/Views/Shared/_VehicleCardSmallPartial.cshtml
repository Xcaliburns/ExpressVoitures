@model DotnetProjet5.ViewModels.VehicleViewModel

<div class="col">
    <a href="@Url.Action("Details", "Vehicles", new { id = Model.CodeVin })" class="text-decoration-none text-dark" aria-label="Voir les détails du véhicule @Model.Model">
        <div class="card border-0">
            <div class="row">
                <div class="col-md-7">
                    <img src="@Model.ImageUrl" alt="Image de @Model.Model" class="img-fluid rounded" style="object-fit: cover;width:594px; height: 316px;">
                </div>
                <div class="col-md-3">
                    <div class="card-body lh-sm" aria-labelledby="vehicle-details-@Model.CodeVin">
                        <p id="vehicle-details-@Model.CodeVin" class="card-text text-nowrap" style="font-size: 22px">@Html.DisplayFor(modelItem => modelItem.SellPrice) €</p>
                        <p class="card-text fw-light" style="font-size: 18px">@Model.Year</p>
                        <p class="card-text fw-light" style="font-size: 18px">@Html.DisplayFor(modelItem => modelItem.Brand)</p>
                        <p class="card-text fw-light" style="font-size: 18px">@Html.DisplayFor(modelItem => modelItem.Model)</p>
                        <p class="card-text fw-light" style="font-size: 18px">@Html.DisplayFor(modelItem => modelItem.Finish)</p>
                    </div>
                </div>
            </div>
        </div>
    </a>
</div>
