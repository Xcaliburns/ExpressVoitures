@{
    ViewData["Title"] = "Page Not Found";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #333;
            text-align: center;
            padding: 50px;
        }
        .error-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 40px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }
        .error-image {
            max-width: 100%;
            height: auto;
        }
        .error-title {
            font-size: 36px;
            margin-top: 20px;
        }
        .error-message {
            font-size: 24px;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="error-container">
        <img src="~/images/image404.jpg" alt="404 Image" class="error-image" />
        <h1 class="error-title">404 - Page Not Found</h1>
        <p class="error-message">Désolé, la page que vous recherchez n'existe pas</p>
    </div>
</body>
</html>
