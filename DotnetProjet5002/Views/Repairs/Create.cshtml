@model DotnetProjet5.Models.ViewModels.RepairViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ajouter une réparation</h1>


<hr />
<div class="d-flex justify-content-center">
    <div class="col-md-6 ">
        <section aria-labelledby="vehicle-info-title">
            <h5 id="vehicle-info-title">informations sur le véhicule à réparer</h5>
            <p>Modèle: @Model.Vehicle?.Model</p>
            <p>Prix d'achat': @Model.Vehicle?.PurchasePrice €</p>
            <img src="@Model.Vehicle?.ImageUrl" alt="image de @Model.Vehicle.Model" class="img-fluid" />
        </section>
        <form asp-action="Create" method="post" aria-labelledby="form-title">
            <fieldset>
                <legend id="form-title">détails de la réparation</legend>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" aria-required="true" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RepairCost" class="control-label"></label>
                    <input asp-for="RepairCost" class="form-control" aria-required="true" />
                    <span asp-validation-for="RepairCost" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" aria-label="Create Repair" />
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" aria-label="Back to List">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
