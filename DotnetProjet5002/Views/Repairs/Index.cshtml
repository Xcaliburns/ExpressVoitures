@model IEnumerable<DotnetProjet5.Models.ViewModels.RepairViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" aria-label="Ajouter une réparation">Nouvelle Réparation</a>
</p>
<table class="table" aria-describedby="repair-table-description">
    <caption id="repair-table-description">Liste des réparations</caption>
    <thead>
        <tr>
           
            <th scope="col">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.RepairCost)
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RepairCost)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RepairId" aria-label="Modifier la réparation @item.RepairId">Modifier</a> |
                <a asp-action="Details" asp-route-id="@item.RepairId" aria-label="Voir les détails de la réparation @item.RepairId">Détails</a> |
                <a asp-action="Delete" asp-route-id="@item.RepairId" aria-label="Supprimer la réparation @item.RepairId">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
