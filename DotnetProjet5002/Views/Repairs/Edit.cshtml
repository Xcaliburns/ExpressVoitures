@model DotnetProjet5.Models.ViewModels.RepairViewModel;

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="custom-mt mb-5">Modifier une réparation</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" aria-labelledby="form-title">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input type="hidden" asp-for="RepairId" />
            <input type="hidden" asp-for="VehicleId" />

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" aria-required="true" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RepairCost" class="control-label"></label>
                <input asp-for="RepairCost" class="form-control" aria-required="true" />
                <span asp-validation-for="RepairCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-custom" aria-label="Save Repair" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="vehicles" asp-action="Index" class="text-muted text-start custom-margin-left">
        <i class="fa-solid fa-arrow-left" aria-hidden="true"></i> retour à la liste des véhicules
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
