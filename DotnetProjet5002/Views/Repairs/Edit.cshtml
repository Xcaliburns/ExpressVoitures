@model DotnetProjet5.Models.ViewModels.RepairViewModel;

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="custom-mt mb-5 text-center" role="heading" aria-level="1">Modifier une réparation</h1> @* Titre principal avec rôle et niveau d'accessibilité *@

<div class="d-flex justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit" aria-labelledby="form-title"> @* Formulaire avec étiquette pour l'accessibilité *@
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input type="hidden" asp-for="RepairId" />
            <input type="hidden" asp-for="VehicleId" />

            <div class="form-group mt-5">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" aria-required="true" /> @* Champ de saisie avec attribut d'accessibilité *@
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-5">
                <label asp-for="RepairCost" class="control-label"></label>
                <input asp-for="RepairCost" class="form-control" aria-required="true" /> @* Champ de saisie avec attribut d'accessibilité *@
                <span asp-validation-for="RepairCost" class="text-danger"></span>
            </div>
            <div class="form-group text-center mt-5">
                <input type="submit" value="Enregistrer" class="btn btn-custom" aria-label="enregistrer la réparation" /> @* Bouton avec étiquette pour l'accessibilité *@
            </div>
        </form>
        <div class="mt-3">
            <a asp-controller="Home" asp-action="Index" class="text-muted" aria-label="Retour à la liste des véhicules"> @* Lien avec étiquette pour l'accessibilité *@
                <i class="fa-solid fa-arrow-left" aria-hidden="true"></i> retour à la liste des véhicules
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
