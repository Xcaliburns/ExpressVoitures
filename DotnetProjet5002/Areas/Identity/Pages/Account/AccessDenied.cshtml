    @page
    @model AccessDeniedModel
    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
        ViewData["Title"] = "Accès Refusé";
    }

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-danger text-white">
                        <h1 class="card-title">@ViewData["Title"]</h1>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Vous n'avez pas les autorisations nécessaires pour accéder à cette page.</p>
                        <p class="card-text">Si vous pensez que c'est une erreur, veuillez contacter l'administrateur du site.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
