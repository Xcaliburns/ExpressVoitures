@page
@model LoginModel

@{
    ViewData["Title"] = "EXPRESS VOITURES";
}
<body>
    <h1>@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    
                    <label asp-for="Input.Email" class="form-label">Adresse Email</label>
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form mb-3" style="width: 372px; height: 64px;">
                        <input asp-for="Input.Email" class="form-control " autocomplete="username" aria-required="true" placeholder="nom@exemple.com" style="background-color: #f0f0f0;" />

                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <label asp-for="Input.Password" class="form-label">Mot de passe</label>
                    <div class="form mb-3" style="width: 372px; height: 64px;">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="mot de passe" style="background-color: #f0f0f0;" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="btn btn-custom mb-3 d-flex mx-auto">Se connecter</button>
                    </div>
                   
                </form>
            </section>
        </div>
    </div>
    </body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
