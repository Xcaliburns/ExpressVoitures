@page
@model RegisterModel
@{
    ViewData["Title"] = "EXPRESS VOITURES";
}
<body>
    <h1>@ViewData["Title"]</h1>


    <div class="row justify-content-center">
        <div class="col-md-4">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">


                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form mb-3">
                    <label asp-for="Input.Email" class="form-label">Adresse Email</label>
                    <div class="form mb-3" style="width: 372px; height: 64px;">
                        <input asp-for="Input.Email" class="form-control " aria-required="true" placeholder="nom@exemple.com" style="background-color: #f0f0f0;" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form mb-3">
                        <label asp-for="Input.Password" class="form-label">Mot de passe </label>
                        <div class="form mb-3" style="width: 372px; height: 64px;">
                            <input asp-for="Input.Password" class="form-control" aria-required="true" placeholder="mot de passe" style="background-color: #f0f0f0;" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form mb-3">
                            <label asp-for="Input.ConfirmPassword">Confirmation du mot de passe</label>
                            <div class="form mb-3" style="width: 372px; height: 64px;">
                                <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" placeholder="Mot de passe" />

                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <button id="registerSubmit" type="submit" class="btn btn-custom mb-3 d-flex mx-auto">Inscription</button>
            </form>
        </div>

    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
